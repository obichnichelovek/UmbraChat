    <None Remove="Fonts\NotoSans-ExtraLight.ttf" />
    <None Remove="Fonts\NotoSans-ExtraLightItalic.ttf" />
    <None Remove="Fonts\NotoSans-Italic.ttf" />
    <None Remove="Fonts\NotoSans-Light.ttf" />
    <None Remove="Fonts\NotoSans-LightItalic.ttf" />
    <None Remove="Fonts\NotoSans-Medium.ttf" />
    <None Remove="Fonts\NotoSans-MediumItalic.ttf" />
    <None Remove="Fonts\NotoSans-Regular.ttf" />
    <None Remove="Fonts\NotoSans-SemiBold.ttf" />
    <None Remove="Fonts\NotoSans-SemiBoldItalic.ttf" />
    <None Remove="Fonts\NotoSans-Thin.ttf" />
    <None Remove="Fonts\NotoSans-ThinItalic.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.5" />
  </ItemGroup>

