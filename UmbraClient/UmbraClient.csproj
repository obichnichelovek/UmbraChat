    <None Remove="Fonts\NotoSans-BlackItalic.ttf" />
    <None Remove="Fonts\NotoSans-Bold.ttf" />
    <None Remove="Fonts\NotoSans-BoldItalic.ttf" />
    <None Remove="Fonts\NotoSans-ExtraBold.ttf" />
